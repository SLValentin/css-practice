

    
    <header class='header '>
        <div>
         {{>logo}}
        </div>      
        <nav class='header-nav '>
            <div class="header-nav-right">
                {{>nav header=header }}
            </div>
        </nav>
    </header>   



    {{#with main}}
    <div class="main">
        <img src="{{image}}" alt="Main image" class="main-image">
        <div class="main-content">
            <h1 class="main-title">{{heading}}</h1>
            <p class="main-text">{{descriotion}}</p>
            <a class="main-button" href="{{href}}">{{button}}</a>
        </div>       
    </div>
    {{/with}}



    <main class="featured">
        {{#each featured}}
        {{>cardBlog img=photo title=heading text=info href=linkUrl button=linkText}}
        {{/each}}
        
    </main>
 
    
    <div class="form">
        {{#each actions}}
        <div class="actions-content">
            <h3 class="actions-title">{{heading}}</h3>
            <a class="actions-button" href="{{url}}">{{text}}</a>
        </div>  
        {{/each}}
    </div>
          
        <footer class="footer">
            <div >
                {{>logo}}
                <span class="footer-copyright">Copyright 2023-2024</span>
            </div>
            {{#each footer}}
                <div >
                    <span class="footer-title ">{{title}}</span>
                    {{>nav header=links isVertical=true}}
                </div>
            {{/each}}
            
        </footer>
 


