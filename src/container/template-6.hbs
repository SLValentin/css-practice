
    <header class='header '>
        <div>
         {{>logo}}
        </div>      
        <nav class='header-nav '>
            <div class="header-nav-right">
                {{>nav header=header }}
            </div>
        </nav>
    </header>   


    <main class="main">  
        {{#with info}}
        <div class="info-block">
            <h1 class="info-title">{{title}}</h1>
            <p class="info-description">{{description}}</p>
        </div>
        {{/with}}


        {{#with form}}
        <form class="form">
            <div class="form-input-list">
                {{#each inputs}}
                <input type="{{type}}" placeholder="{{placeholder}}" class="form-input" name="{{name}}" id="form-input-{{id}}">
                {{/each}}
            </div>
            <div class="form-checkbox-block">
                <input type="checkbox" name="{{checkbox.name}}">
                <label>{{checkbox.label}}</label>
            </div>  
            <button type="submit" class="form-button">{{button}}</button>
            <p class="form-info">{{info}}</p>          
        </form>
        {{/with}}
    </main>



    {{#with updates}}
        <div class="updates"> 
            <h1 class="updates-title">{{title}}</h1>
            {{#each list}}
            <div class="list">
                <strong class="list-name">{{nickname}}</strong>
                <p class="list-text">{{description}}</p>
            </div>
            {{/each}}
            <a href="{{show_all.url}}" class="updates-link">{{show_all.text}}</a>
        </div>
    {{/with}}



   
        {{#with expirience}}
            <div class="expirience"> 
                    <h2 class="expirience-title">{{title}}</h2>
                    <div class="card-block">    
                {{#each list}}
                    <div class="card" >            
                    <strong class="card-title">{{name}}</strong>
                        <p class="card-text">{{details}}</p>           
                    </div>
                {{/each}}
                </div>   
              </div>           
        {{/with}}
     

        <footer class="footer">
            <div >
                {{>logo}}
                <span class="footer-copyright">Copyright 2023-2024</span>
            </div>
            {{#each footer}}
                <div >
                    <span class="footer-title ">{{title}}</span>
                    {{>nav header=links isVertical=true}}
                </div>
            {{/each}}
            
        </footer>
 
 


